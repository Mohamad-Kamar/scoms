{
  "name": "scoms",
  "version": "1.0.0",
  "description": "ScreenCloud Order Management System",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "build:vercel": "rm -rf api && tsc --outDir api",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest \"src/(services|utils|repositories)/__tests__/.*\\.test\\.ts$\"",
    "test:integration": "jest \"src/api/__tests__/.*\\.test\\.ts$\"",
    "lint:fix": "eslint . --ext .ts,.tsx --ignore-pattern 'dist/' --fix",
    "format": "prettier --write \"**/*.+(ts|tsx|json|css|md)\"",
    "format:check": "prettier --check \"**/*.+(ts|tsx|json|css|md)\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "clean": "rm -rf dist",
    "start:prod": "NODE_ENV=production node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/geolib": "^2.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.5.0",
    "@types/swagger-ui-express": "^4.1.8",
    "express": "^5.1.0",
    "geolib": "^3.3.4",
    "prisma": "^5.22.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ulid": "^2.4.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  }
}
